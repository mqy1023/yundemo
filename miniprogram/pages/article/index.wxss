.out{ padding:30rpx;}
.out .box{ display: flex; justify-content:space-between; 
  padding:30rpx 0; 
  border-bottom:1rpx dashed #e4e4e4;
}
.out .box .pic{ width:250rpx; height: 160rpx;}
.out .box .pic .img{  width:100%; height: 100%;}
.out .box .text{width:410rpx; height: 160rpx; display: flex; flex-direction: column; justify-content: space-between;}
.out .box .title{ 
  font-size: 34rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.out .box .info{font-size: 28rpx; color:#888; display: flex; justify-content: space-between;}
.out .box .info .van-icon{ margin-right: 5rpx;}

.loading{ text-align: center; padding:30rpx 0}